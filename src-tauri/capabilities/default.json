{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPDATA/*" }
      ]
    },
    {
      "identifier": "fs:allow-app-read",
      "allow": [
        { "path": "$APPDATA/com.karim.tauri-app/*" }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        { "path": "$APPDATA/com.karim.tauri-app/*" }
      ]
    }
  ]
}